<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H, 2:3</item>
        <item name="layout_constraintHeight_percent">0.08</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/image_background_rect_teal</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="TitleTextView" parent="DefaultTextView">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:background">@drawable/image_background_rect_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_title</item>
    </style>

    <style name="CharacterTextView" parent="DefaultTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">@dimen/font_size_character</item>
    </style>

    <style name="PronunciationTextView" parent="DefaultTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="MeaningTextView" parent="DefaultTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="SpeechButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@android:drawable/ic_lock_silent_mode_off</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="WriteButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@android:drawable/ic_menu_edit</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="QuestionTextView" parent="DefaultTextView">
        <item name="android:background">@drawable/image_background_rect_white</item>
        <item name="android:textSize">@dimen/font_size_question</item>
        <item name="android:padding">@dimen/padding_question</item>
    </style>
</resources>